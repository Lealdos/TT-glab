generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid()) @db.VarChar(36)
  firstName    String
  lastName     String
  email        String        @unique
  password     String
  role         Role
  reservations Reservation[]
}

model Reservation {
  id              String   @id @default(uuid()) @db.VarChar(36)
  firstName       String
  lastName        String
  documentType    String
  documentNumber  String
  email           String
  reservationDate DateTime
  reservationType String
  numberOfPeople  Int
  description     String?
  userId          String
  user            User     @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  CLIENT
}
